<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Dark Themed Login</title>
    <style>
      /* Reset some basic elements */
      * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
      }

      body {
        background-color: #121212; /* Dark background */
        color: #e0e0e0; /* Lighter text */
        font-family: 'Arial', sans-serif;
        display: flex;
        justify-content: center;
        align-items: center;
        height: 100vh;
      }

      form {
        background-color: #1e1e1e; /* Slightly lighter dark background */
        padding: 20px;
        border-radius: 8px;
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.4);
        display: flex;
        flex-direction: column;
        gap: 15px;
        width: 300px;
      }

      input[type="text"],
      input[type="password"] {
        background-color: #333;
        color: #e0e0e0;
        border: 1px solid #444;
        padding: 10px;
        border-radius: 5px;
        outline: none;
        font-size: 1rem;
      }

      input[type="text"]:focus,
      input[type="password"]:focus {
        border-color: #6200ea; /* Solana-themed purple */
      }

      input[type="submit"] {
        background-color: #6200ea; /* Solana-themed purple */
        color: white;
        border: none;
        padding: 10px;
        border-radius: 5px;
        cursor: pointer;
        font-size: 1rem;
        transition: background-color 0.3s ease;
      }

      input[type="submit"]:hover {
        background-color: #3700b3; /* Darker purple on hover */
      }

      a {
        color: #bb86fc; /* Accent color for link */
        text-align: center;
        display: block;
        margin-top: 10px;
      }

      #error {
        color: #cf6679; /* Red for error messages */
        font-size: 0.9rem;
        margin-top: -10px;
        text-align: center;
      }
    </style>
  </head>
  <body>
    <form action="/login" method="post">
      <input type="text" name="username" id="username" placeholder="Username" required />
      <input type="password" name="password" id="password" placeholder="Password" required />
      <span id="error"></span>
      <input type="submit" value="Login" />
      <a href="/signup">Signup</a>
    </form>

    <script>
      const errSpan = document.getElementById("error");
      const password = document.getElementById("password");
      const username = document.getElementById("username");

      password.addEventListener("input", () => {
        if (password.value.length < 8) {
          errSpan.textContent = "Password should be at least 8 characters";
        } else {
          errSpan.textContent = "";
        }
      });
    </script>
  </body>
</html>
